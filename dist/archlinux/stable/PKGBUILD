pkgname=jpp
pkgver=4.3
pkgrel=1
pkgdesc="Bash based preprocessor for Java"
arch=('any')
url="https://github.com/maandree/jpp"
license=('GPL3')
depends=('java-runtime>=5' 'bash')
provides=($pkgname)
conflicts=($pkgname)
source=($url/archive/$pkgver.tar.gz)
sha256sums=(d1655f4e35d77009602abebee3973607460a784d19b9692897665c368bc45fb7)

build() {
  cd jpp-${pkgver}
  make DESTDIR="$pkgdir/"
}

package() {
  cd jpp-${pkgver}
  make DESTDIR="$pkgdir/" install
}

