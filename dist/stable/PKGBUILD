# Maintainer: Mattias Andr√©e <maandree@operamail.com>
pkgname=jpp
pkgver=3
pkgrel=1
pkgdesc="Bash based preprocessor for Java"
arch=('any')
url="https://github.com/maandree/jpp"
license=('GPL3')
depends=('java-runtime>=5' 'bash')
provides=('jpp')
conflicts=('jpp')
source=(https://github.com/maandree/jpp/tarball/3)
md5sums=(b48055d63b9e430ef9fbf8564c3555a4)

build() {
  cd maandree-jpp-*
  make -B DESTDIR="$pkgdir/"
}

package() {
  cd maandree-jpp-*
  make DESTDIR="$pkgdir/" install
}
